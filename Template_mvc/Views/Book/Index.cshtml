@model IEnumerable<REST_API_TEMPLATE.Models.BookDTO>
<h2>List all books</h2>

<a class="btn btn-primary" asp-asp-controller="Books" asp-action="add-Book">Add new Book</a>
<table class="table">
    <tr>
        <th>Id Code</th>
        <th>Title </th>
        <th>Author </th>
        <th>Publisher </th>
        <th> Rating </th>
        <th> Detail </th>
        <th> Edit </th>
        <th> Detele </th>
    </tr>
    @foreach ( var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@foreach (var i in item.AuthorName) {@i<br /> }</td>
            <td>@item.PublisherName</td>
            <td>
                @for (var i = 0; i < item.Rate; i++)
                {
                 <span class="glyphicon glyphicon-star"></span>   
                }
            </td>
            <td><a asp-area =""asp-controller="Books"asp-action="ListBook" asp-route-id="@item.Id">Detail</a></td>
            <td><a asp-area="" asp-controller="Books" asp-action="EditBook" asp-route-id="@item.Id">Edit</a></td>
            <td><a asp-area="" asp-controller="Books" asp-action="DelBook" asp-route-id="@item.Id">Detele</a></td>
        </tr>
    }
</table>
<form asp-asp-controller="Books" asp-action="Index" method="GET">
    <label>Tìm Kiếm Sách:</label>
    <select name="filterOn" id="filterOn">
        <option value="title">Tiêu Đề</option>
        <option value="author">Tác Giả</option>
        <option value="publisher">Nhà Xuất Bản</option>
    </select>
    <input type="text" name="filterQuery"  />
    <label>Sắp xếp:</label>
    <select name="sortBy " id="sortBy">
        <option value="title">Tiêu Đề </option>
        <option value="rate">Đánh Giá </option>
    </select>
    <label>Tăng dần</label><input type="radio" name="isAscending" value="True" />
    <label>Giảm dần</label><input type="radio" name="isAscending" value="False" />
    <input type="submit" values="Seach" />
</form>